<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AbpCommunityTalks.Maui.Pages.IdentityUsersPage"
             Title="Identity Users"
             x:Name="page"
             BindingContext="{Binding ViewModel, Source={x:Reference page}}">
    <StackLayout>
        <ListView 
            IsPullToRefreshEnabled="True"
            ItemsSource="{Binding Items}"
            IsRefreshing="{Binding IsBusy}"
            RefreshCommand="{Binding RefreshCommand}"
            SelectionMode="None">
            <ListView.Header>
                <SearchBar Text="{Binding Input.Filter}" SearchCommand="{Binding RefreshCommand}" />
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell 
                        Text="{Binding UserName, StringFormat='@{0}'}"
                        Detail="{Binding Email}">
                        <TextCell.ContextActions>
                            <MenuItem Text="Delete" IsDestructive="True" Clicked="OnDeleteClicked" CommandParameter="{Binding .}" />
                        </TextCell.ContextActions>
                    </TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
